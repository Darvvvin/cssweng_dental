<style>
	body {
        background-color: rgb(245, 245, 245); 
    }
</style>

<h1 style="text-align: center; color: #8455ca; margin-top: 1rem;">BookMeDental <i class="fas fa-tooth"></i></h1>

<div class="card mx-auto" style="width: 50rem;">
    <div class="card-body">
        <div class="card-title" style="font-size: 42px;">Contact Information</div>
        <div class="card-text">
            <form>
                <div class="form-group">
                	<div class="row">
                		<div class="col">
                    <label for="exampleInputEmail1">First Name</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />
                    	</div>
                    	<div class="col">
                    <label for="exampleInputEmail1">Last Name</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />	
                    	</div>
                	</div>
                </div>
                <div class="form-group">
                	<div class="row">
                		<div class="col-8">
                    <label for="exampleInputEmail1">Street Address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />
                    	</div>
                    	<div class="col-4">
                    <label for="exampleInputEmail1">House No.</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />	
                    	</div>
                	</div>
                </div>
                <div class="form-group">
                	<div class="row">
                		<div class="col-6">
                    <label for="exampleInputEmail1">City</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />
                    	</div>
                    	<div class="col-4">
                    <label for="exampleInputEmail1">State</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />	
                    	</div>
                    	<div class="col-2">
                    <label for="exampleInputEmail1">Zip</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />	
                    	</div>
                	</div>
                </div>
                <div class="form-group">
                	<label for="examplePhone">Phone</label>
                	<input type="email" class="form-control" id="phone" placeholder="(555) 555-1234" />
                </div>
                <div class="card-title" style="font-size: 42px;">Qualifications</div>
                Position
                <div class="form-check">
				  <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
				  <label class="form-check-label" for="exampleRadios1">
				    Front Desk
				  </label>
				</div>
				<div class="form-check">
				  <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
				  <label class="form-check-label" for="exampleRadios2">
				    Dental Assistant
				  </label>
				</div>
				<div class="form-check">
				  <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
				  <label class="form-check-label" for="exampleRadios3">
				    Dental Hygenist
				  </label>
				</div>
                <button type="submit" class="btn btn-primary w-100" style="background-color: #8455ca;">Save</button>
            </form>
        </div>
    </div>
</div>