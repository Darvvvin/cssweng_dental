	body {
        background-color: rgb(245, 245, 245); 
    }

	form label{
		font-weight:bold;
	}

	textarea {
	  resize: none;
	}

	#container{
		display: flex;
		justify-content: left;
		height: 250px;
		text-align: center;
		margin-top: -20px;
