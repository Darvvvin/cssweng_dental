<style>
	body {
        background-color: rgb(245, 245, 245); 
    }

	form label{
		font-weight:bold;
	}

	textarea {
	  resize: none;
	}

	#container{
		display: flex;
		justify-content: left;
		height: 250px;
		text-align: center;
		margin-top: -20px;
	}

	.container2{
		height: auto;
		width: 250px;
		padding-top: 40px;
	}

	.container3{
		height: auto;
		width: 510px;
		padding-left: 50px;
		padding-top: 70px;
		margin-left: -30px;
	}

	.img-circle {
		width: 150px;
		height: 150px;
		border: 4px solid none;
		border-radius: 50%;
	}

	.dropdown {
    position: relative;
    display: inline-block;
    cursor: pointer;
}

