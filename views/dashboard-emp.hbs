<style>
    body {
        background-color: rgb(245, 245, 245);
    }
    .rectangle {
        padding: 5px;
        height: auto;
        display: inline-block;

        background-color: #8fc81f;
        color: white;

        font-size: 12px;
        font-weight: bold;

        border-radius: 5px;
        text-align: center;
    }
</style>

<div class="container mb-4 p-0" style="margin-top: 6rem;">
    <div class="row">
        <div class="col-sm-3 p-1">
            <div class="card shadow-sm mx-auto profile-length" style="width: 100%;">
                <div class="card-body">
                    <span class="card-text" style="text-align: left; font-size: 32px;">
                        {{profileData.clinicName}} 
                    </span>
                    <hr />
                    <span class="card-text" style="text-align: left;"> <i class="fas fa-location-arrow" style="color: #8455ca;">&nbsp;</i> {{profileData.clinicAddress.city}}, {{profileData.clinicAddress.state}} </span>
                    <br />
                    <span class="card-text" style="text-align: left;"> <i class="far fa-envelope" style="color: #8455ca;">&nbsp;</i> {{profileData.clinicContactEmails.[0]}}</span>
                    <br />
                    <span class="card-text" style="text-align: left;"> <i class="fas fa-phone" style="color: #8455ca;">&nbsp;</i> {{profileData.phone}} </span>
                    <br />
                    <br />
                    <a href="#">Edit Profile</a>
                </div>
            </div>

            <br />

            <div class="card border border-primary shadow-sm mx-auto mb-4 profile-length" style="width: 100%;">
                <div class="card-body">
                    <span class="card-text" style="text-align: left; font-size: 32px;">
                        4
                        <span style="font-size: 15px;">Temporary Job Posts</span>
                    </span>
                    <hr />
                    <a href="#" class="btn btn-primary w-100">View Jobs</a>
                </div>
            </div>
            <div class="card border border-info shadow-sm mx-auto mb-4 profile-length" style="width: 100%;">
                <div class="card-body">
                    <span class="card-text" style="text-align: left; font-size: 32px;">
                        2
                        <span style="font-size: 15px;">Resumes Downloaded</span>
                    </span>
                    <hr />
                    <a href="#" class="btn btn-info w-100" style="text-align: left;">100% Response Rate</a>
                </div>
            </div>
            <div class="card border border-success shadow-sm mx-auto mb-4 profile-length" style="width: 100%;">
                <div class="card-body">
                    <span class="card-text" style="text-align: left; font-size: 32px;">
                        2
                        <span style="font-size: 15px;">Permanent Job Posts</span>
                    </span>
                    <hr />
                    <a href="#" class="btn btn-success w-100" style="text-align: left;">100% Response Rate</a>
                </div>
            </div>
        </div>

        <div class="col-sm-9 p-1">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <div class="card shadow-sm mx-auto profile-length" style="height: 100%;">
                            <div class="card-body">
                                <div class="card-title" style="font-size: 42px; font-weight: 800;">Dashboard</div>
                                <hr />
                                <div class="container">
                                    <h2>Active Job Posts</h2>
                                    <a href="/create">+ Create New</a>

                                    {{> dashboardJobEmp}}

                                    <div class="card border border-primary m-0 mt-2 mb-2">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                Front desk wanted (temp!) | <br />
                                                <small> Brichmond Dental </small>
                                            </h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">View this job</a>
                                        </div>
                                    </div>

                                    <a href="/feed">View All Jobs</a>

                                    <hr />
                                    <h2>Upcoming Temp Opportunities</h2>
                                    
                                    {{> dashboardJobEmp}}

                                    <div class="card border border-primary m-0 mt-2 mb-2">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                Front desk wanted (temp!) | <br />
                                                <small> Brichmond Dental </small>
                                            </h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">View this job</a>
                                        </div>
                                    </div>
                                    <small>No upcoming temporary jobs are currently listed for you.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
