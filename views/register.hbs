<style>
    body {
        background: url(imgs/login.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<p class="h1 shrink" style="text-align: center; color: white; margin-top: 5rem; font-size: 70px; ">BookMeDental <i class="fas fa-tooth"></i></h1>

<div class="card mx-auto border shadow-sm" style="width: 35rem; margin-bottom: 2rem;">
    <div class="card-body">
        <div class="card-title" style="font-size: 42px;">Register</div>
        <div class="card-text">
            <form method="POST" action="/register">
                <div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                        <input type="radio" name="options" value="applicant" id="option1" autocomplete="off"
                            {{#unless isEmployer}}checked{{/unless}}>Applicant
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="options" value="employer" id="option2" autocomplete="off"
                        {{#if isEmployer}}checked{{/if}}> Employer
                    </label>
                </div>
                <br> <br>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                        aria-describedby="emailHelp" placeholder="Enter email" value="{{inputs.email}}" />
                    <p style="color: red;">{{details.emailError}}</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label> <i><small
                            style="font-size: 12px; color: grey">Minimum of 8 characters</small></i>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password"
                        placeholder="Password" />
                    <p style="color: red;">{{details.passwordError}}</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Confirm Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="passwordConfirm"
                        placeholder="Password" />
                    <p style="color: red;">{{details.passwordConfirmError}}</p>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="termsCheck"
                        {{#if inputs.termsCheck}}checked{{/if}} />
                    <label class="form-check-label" for="exampleCheck1">I agree to the <a href="/imgs/terms.pdf" target="_blank">terms and
                            conditions.</a></label>
                    <p style="color: red;">{{details.termsCheckError}}</p>
                </div>
                <br>
                <button type="submit" class="btn btn-primary w-100" style="background-color: #8455ca;">Register</button>
            </form>
        </div>
    </div>
</div>