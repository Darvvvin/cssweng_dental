<style>
    body {
        background-color: rgb(245, 245, 245);
    }

    .title {
        font-size: 42px;
    }

    .flex-row {
        display: flex;
        flex-wrap: wrap;
    }
</style>

<div class="container mb-4 p-0" style="margin-top: 5em;">

    <div class="row mb-2">
        <div class="card w-100 border m-0 p-2 ">
            <span class="title"> {{appData.fName}} {{appData.lName}}</b> </span>
        </div>
    </div>

    <hr>

    <div class="row">

        <div class="col-sm-9 pl-0 pr-1">
            <div class="card border m-0 p-2 shadow-sm">
                <p class="h3">Description</p>
                <p class="description">{{appData.profile}}</p>

                <button type="submit" class="btn btn-primary w-100" style="background-color: #8455ca;">Hire</button>
            </div>

            <hr>

            <div class="card border m-0 mt-4 p-2 shadow-sm">
                <div class="row flex-row">
                    <div class="col">
                        <b>Position</b> <br>
                        <small>{{appData.position}}</small>
                    </div>
                    <div class="col">
                        <b>Software</b> <br>
                        <small>{{appData.dentalProg}}</small>
                    </div>
                    <div class="col">
                        <b>Experience</b> <br>
                        <small>{{appData.yearExp}} Years of Experience</small>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-sm-3 pr-0 pl-1">
            <div class="card border shadow-sm mx-auto profile-length h-100" style="width: 100%;">
                <img src="/avatars/{{avatar_found appData.avatar}}" class="w-100" style="object-fit: cover; height: 246px;">
                <div class="card-body">
                    <span class="card-text" style="text-align: left;"> <i class="fas fa-location-arrow"
                            style="color: #8455ca;">&nbsp;</i> {{appData.city}}, {{appData.state}} </span>
                    <br />
                    <span class="card-text" style="text-align: left;"> <i class="far fa-envelope"
                            style="color: #8455ca;">&nbsp;</i> {{appData.account.accEmail}} </span>
                    <br />
                    <span class="card-text" style="text-align: left;"> <i class="fas fa-phone"
                            style="color: #8455ca;">&nbsp;</i> {{appData.phone}} </span>
                    <br />
                </div>
            </div>
        </div>

    </div>
</div>